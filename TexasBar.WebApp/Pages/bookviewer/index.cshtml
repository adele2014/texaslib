                    bookValue = sessionStorage.getItem("bookValue"),
                    chapterFolder = sessionStorage.getItem("chapterFolder"),
                    firstChapterNo = sessionStorage.getItem("firstChapterNo"),
                    // title = title

                    title = "test page";

                    $.ajax({
                        type: "POST",
                        url: "?handler=bookmarks&version=" + version + "&bookValue=" + bookValue + "&chapterFolder=" + chapterFolder + "&firstChapterNo" + firstChapterNo + "&title=" + title,
